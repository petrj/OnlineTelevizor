<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SledovaniTVLive.Views.App">
    <Application.Resources>
        <ResourceDictionary >

            <Color x:Key="primary-back-title-color">#262626</Color>
            <Color x:Key="primary-title-color">#FFFF00</Color>

            <!-- Pallete-end -->
            <Style ApplyToDerivedTypes="true" TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource Key=primary-back-title-color}"/>
                <Setter Property="BarTextColor" Value="{StaticResource Key=primary-title-color}"/>
            </Style>
        </ResourceDictionary>

    </Application.Resources>
</Application>